
@{
    ViewData["Title"] = "BlackJack";
}

<h1>Jogo BlackJack</h1>

<div class="container-fluid" >
    <div class="row">
        <div class="col-md-4">
            <h3 id="nomeJogador1">
                Jogador 1
            </h3>
            <br /><br />
            <img alt="carta1" src="/images/BlackJack.png" height="350" width="250" name="cartas1" id="cartas1">
            <br /><br />
            <button type="button" class="btn btn-success" name="btn_jogador_1" id="btn_jogador_1" onclick="jogadas(1)" disabled>
                Jogar
            </button>
            <button type="button" class="btn btn-success" name="btn_parar_1" id="btn_parar_1" onclick="parar1()" disabled>
                Parar
            </button>
        </div>
        <div class="col-md-4">
            <h3>
                Partida
            </h3>
            <br /><br />
            <button type="button" class="btn btn-success" name="btn_iniciar" id="btn_iniciar" onclick="iniciar()">
                Iniciar
            </button>
            <button type="button" class="btn btn-success" name="btn_reiniciar" id="btn_reiniciar" onclick="reiniciar()" disabled>
                Reiniciar
            </button>
            <br /><br />
            <div class="row">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <div class="col-md-1">
                    <span class="badge badge-default" id="jogador1">0</span>
                </div>
                <div class="col-md-1">
                    <span class="badge badge-default">X</span>
                </div>
                <div class="col-md-1">
                    <span class="badge badge-default" id="jogador2">0</span>
                </div>
            </div>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="badge badge-default" id="resultado"></span>
        </div>
        <div class="col-md-4">
            <h3 id="nomeJogador2">
                Jogador 2
            </h3>
            <br /><br />
            <img alt="carta2" src="/images/BlackJack.png" height="350" width="250" name="cartas2" id="cartas2">
            <br /><br />
            <button type="button" class="btn btn-success" name="btn_jogador_2" id="btn_jogador_2" onclick="jogadas(2)" disabled>
                Jogar
            </button>
            <button type="button" class="btn btn-success" name="btn_parar_2" id="btn_parar_2" onclick="parar2()" disabled>
                Parar
            </button>
        </div>
    </div>
</div>